// Input: pos is a 2-bit input
// Output: led is a 8-bit output
module pos_to_led (
    input pos[2],
    output led[3][8]
  ) {

  always {
      case (pos) {
          0: led = c{{8h00},{8h00},{8hff}};      
          1: led = c{{8h00},{8hff},{8h00}};
          2: led = c{{8hff},{8h00},{8h00}};
          3: led = 3x{{8h00}};   
    default: led = 3x{{8h00}};
  }
}
